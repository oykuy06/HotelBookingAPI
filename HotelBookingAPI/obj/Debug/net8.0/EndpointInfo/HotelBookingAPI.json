        ],
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "nullable": true
          },
          "newPassword": {
            "minLength": 3,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "RoomDto": {
        "required": [
          "capacity",
          "hotelId",
          "name",
          "price",
          "roomNumber"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "hotelId": {
            "type": "integer",
            "format": "int32"
          },
          "roomNumber": {
            "type": "integer",
            "format": "int32"
          },
          "capacity": {
            "maximum": 5,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "description": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "photo": {
